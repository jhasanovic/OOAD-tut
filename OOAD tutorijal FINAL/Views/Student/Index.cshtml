@model IEnumerable<OOAD_tutorijal_FINAL.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BrojIndeksa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vrsta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GodinaStudija)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
             <th>
                @Html.DisplayFor(modelItem => item.BrojIndeksa)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.Vrsta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GodinaStudija)
            </td>
            <td>
                    @if (User.IsInRole("Administrator")) {
                        <a asp-action="Edit" asp-route-id="@item.BrojIndeksa">Edit</a>
                    <nobr>|</nobr>
                     <a asp-action="Delete" asp-route-id="@item.BrojIndeksa">Delete</a>
                    <nobr>|</nobr>
                    }
                    <a asp-action = "Details" asp-route-id = "@item.BrojIndeksa" >Details </a>
               
            </td>
        </tr>
}
    </tbody>
</table>
