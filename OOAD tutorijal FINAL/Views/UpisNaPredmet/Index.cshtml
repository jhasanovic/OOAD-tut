@model IEnumerable<OOAD_tutorijal_FINAL.Models.UpisNaPredmet>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Student)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Predmet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatumUpisa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Student.BrojIndeksa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Predmet.Naziv)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatumUpisa)
            </td>
            <td>
                @if (User.IsInRole("Administrator")) {
                        <a asp-action="Edit" asp-route-id="@item.ID">Edit</a>
                    <nobr>|</nobr>
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                    <nobr>|</nobr>
                    }
                    <a asp-action = "Details" asp-route-id = "@item.ID" > Details </a> 
                
            </td>
        </tr>
}
    </tbody>
</table>
